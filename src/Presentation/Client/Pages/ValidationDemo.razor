@page "/validation-demo"
@using PathfinderCampaignManager.Domain.Validation
@using PathfinderCampaignManager.Presentation.Client.Components.Validation
@using PathfinderCampaignManager.Domain.Interfaces

<PageTitle>Validation Demo</PageTitle>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h1>
                <i class="fas fa-check-circle text-primary me-2"></i>
                Validation System Demo
            </h1>
            <p class="text-muted">
                Demonstrate the validation system with sample validation reports.
            </p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-check text-success me-2"></i>
                        Valid Character Report
                    </h5>
                </div>
                <div class="card-body">
                    <ValidationReportDisplay Report="ValidReport" />
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                        Report with Warnings
                    </h5>
                </div>
                <div class="card-body">
                    <ValidationReportDisplay Report="WarningReport" />
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-times text-danger me-2"></i>
                        Invalid Character Report
                    </h5>
                </div>
                <div class="card-body">
                    <ValidationReportDisplay Report="InvalidReport" />
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-cog text-info me-2"></i>
                        Validation Panel Demo
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Interactive validation panel component:</p>
                    <ValidationPanel 
                        Title="Character Validation"
                        ShowAutoValidate="true"
                        OnValidationCompleted="OnValidationCompleted" />
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-lightbulb text-info me-2"></i>
                        Compact Validation Display
                    </h5>
                </div>
                <div class="card-body">
                    <ValidationReportDisplay Report="SuggestionReport" Compact="true" />
                </div>
            </div>
        </div>
    </div>
</div>