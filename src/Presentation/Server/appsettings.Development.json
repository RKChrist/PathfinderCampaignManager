{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=InMemoryDb",
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "SecretKey": "development-secret-key-for-jwt-tokens-must-be-at-least-256-bits-long-12345678901234567890",
    "Issuer": "PathfinderCampaignManager.Development",
    "Audience": "PathfinderCampaignManager.Client",
    "ExpirationMinutes": 120
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "PathfinderCampaignManager": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ApplicationSettings": {
    "Environment": "Development",
    "MaxConcurrentUsers": 100,
    "SessionTimeoutMinutes": 60,
    "EnableDetailedErrors": true,
    "EnableSwagger": true,
    "CacheExpirationMinutes": 5,
    "UseInMemoryDatabase": true,
    "EnableSensitiveDataLogging": true
  },
  "SignalR": {
    "MaximumReceiveMessageSize": 32768,
    "StreamBufferCapacity": 10,
    "EnableDetailedErrors": true
  },
  "Features": {
    "EnableRealTimeFeatures": true,
    "EnableValidation": true,
    "EnableHoverCards": true,
    "EnableArchetypes": true,
    "MaxCharactersPerUser": 20,
    "MaxCampaignsPerUser": 10
  }
}
